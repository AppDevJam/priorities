<div>
  <div>
    <h1>
      Priority #<%= @the_priority.id %> details
    </h1>

    <div>
      <div>
        <a href="/priorities">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_priority/<%= @the_priority.id %>">
          Delete priority
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_priority.description %>
      </dd>

      <dt>
        Day
      </dt>
      <dd>
        <%= @the_priority.day %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_priority.user_id %>
      </dd>

      <dt>
        Alert sent
      </dt>
      <dd>
        <%= @the_priority.priority_accomplished %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_priority.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_priority.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit priority
    </h2>

    <form action="/modify_priority/<%= @the_priority.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_priority.description %>">
      </div>

      <div>
        <label for="day_box">
          Day
        </label>

        <input type="date" id="day_box" name="query_day" value="<%= @the_priority.day %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_priority.user_id %>">
      </div>

      <div>
        <input type="checkbox" id="priority_accomplished_box" name="query_priority_accomplished" value="1" <%= "checked" if @the_priority.priority_accomplished %>>

        <label for="alert_sent_box">
            Priority accomplished
        </label>
      </div>

      <button>
        Update priority
      </button>
    </form>
  </div>
</div>

<hr>
